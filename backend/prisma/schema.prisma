generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum Role {
  user
  admin
}

model Users {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  role Role

  Characters Characters[]
  Campaigns Campaigns[]
}

model Characters {
  id Int @id @default(autoincrement())
  name String
  owner   Users @relation(fields: [ownerId], references: [id])
  ownerId Int
}

model Campaigns {
  id Int @id @default(autoincrement())
  name String
  join_code String
  owner Users @relation(fields: [ownerId], references: [id])
  ownerId Int
}